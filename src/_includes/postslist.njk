{%- css %}{% include "src/post_styles.css" %}{% endcss %}
<link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ol reversed class="postlist">
{% for post in postslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.post_title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
		<p class="postlist-link">{% if post.data.title %}{{ post.data.description }}{% else %}{{ post.data.description }}{% endif %}</p>
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("dd LLLL yyyy") }}</time>
	</li>
{% endfor %}
</ol>